@model AngularFields
@{
    ViewData["Title"] = "Home Page";
}

<div-angular source="Carousel.GetAll()" destination="Carousels" id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li-angular ang-repeat="Carousels" data-target="#myCarousel" data-slide-to="{{Carousel.Id}}" ang-class="Carousel.ActiveClass"></li-angular>
    </ol>
    
    <div class="carousel-inner" role="listbox">
        <div-angular ang-repeat="Carousels" class="item" ang-class="Carousel.ActiveClass">
            <img-angular ang-src-route="~/images/" ang-src="Carousel.Img" ang-alt="Carousel.ImgAlt" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <span-angular ang-bind="Carousel.Title"></span-angular>
                    <a-angular class="btn btn-default" ang-href="Carousel.Link">
                        Learn More
                    </a-angular>
                </p>
            </div>
        </div-angular>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div-angular>


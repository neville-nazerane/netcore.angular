<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <PackageId>NetCore.Angular</PackageId>
    <PackageVersion>1.0.2</PackageVersion>
    <Authors>Neville Nazerane</Authors>
    <Description>
      Integration between .net core web applications and angulars
    </Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>
      - added extended tag helpers for a, img, form and input
      - added direct data injection using ang-data
    </PackageReleaseNotes>
    <PackageTags>netcore mvc angular strongly typed safe tag helpers</PackageTags>
    <!--<PackageIconUrl>http://netcoresimple.azurewebsites.net/content/themes/icon.png</PackageIconUrl>-->
    <PackageProjectUrl>https://github.com/neville-nazerane/netcore.angular</PackageProjectUrl>
    <RootNamespace>NetCore.Angular</RootNamespace>
    <AssemblyName>NetCore.Angular</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.All" Version="2.0.6" />
  </ItemGroup>

</Project>
